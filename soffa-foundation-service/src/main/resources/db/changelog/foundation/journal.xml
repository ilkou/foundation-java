<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd"
    logicalFilePath="foundations/sysjobs">

    <changeSet id="20220219_CreateJournal" author="tg">
        <createTable tableName="${table_prefix}f_journal">
            <column name="id" type="varchar">
                <constraints primaryKey="true" primaryKeyName="${table_prefix}f_journal_pk"/>
            </column>
            <column name="event" type="varchar(60)">
                <constraints nullable="false" />
            </column>
            <column name="subject" type="varchar(60)" />
            <column name="data" type="TEXT" />
            <column name="status" type="varchar(20)" />
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="${table_prefix}f_journal" indexName="${table_prefix}f_journal__created_at__idx">
            <column name="created_at"/>
        </createIndex>
        <createIndex tableName="${table_prefix}f_journal" indexName="${table_prefix}f_journal__subject__idx">
            <column name="subject"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
