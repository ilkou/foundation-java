<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd"
    logicalFilePath="platform/metrics">

    <changeSet id="20220208_CreateMetricsTables" author="gahissy.titus">
        <createTable tableName="${table_prefix}sys_metrics">
            <column name="id" type="varchar(64)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="data" type="TEXT"/>
            <column name="value_num" type="double"/>
            <column name="application" type="varchar(64)"/>
            <column name="user_id" type="varchar(64)"/>
            <column name="request_id" type="varchar(64)"/>
            <column name="span_id" type="varchar(64)"/>
            <column name="trace_id" type="varchar(64)"/>
            <column name="date" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="date_year" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="date_month" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="date_day" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="processing_flag" type="integer">
                <constraints nullable="false" />
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
